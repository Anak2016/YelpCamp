<!--in campground/show-->
<%include ../partials/header%>
<div class ="container">
    <div class ="row">
        <div class ="col-md-3">
            <p class ="lead">YelpCamp</p>
            <!--beginning of category list-->
            <div class = "list-group">
                <li class ="list-group-item active">Info 1</li>
                <li class ="list-group-item">Info 1</li>
                <li class ="list-group-item">Info 1</li>
            </div>
            <!--end of category list-->
            <!--map goes here-->
        </div>
        <div class="col-md-9">
            <!--beginging of campground-->
            <div class="thumbnail">
                <img class ="img-responsive" src ="<%= campground.image %>">
                <div class="caption-full">
                    <!--adjust to the right of the parent's col-->
                    <h4 class ="pull-right"> $ 9.00/night</h4> 
                    <h4><a><%=campground.name%></a></h4>
                    <h4><%=campground.description%></h4>
                </div>
            </div>
            <!--end of campground-->
            <!--beginnnign  of comment-->
            <div class="well">
                <div class="text-right">
                    <!--add comment button-->
                    <a class ="btn btn-success" href="/campgrounds/<%= campground._id%>/comments/new">Add new comment here hoe</a>
                </div>
                <hr>
                <!--add comment as a separate row-->
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <!--take full col-->
                        <div class="col-md-12">
                            <strong><%= comment.author%></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text%>
                            </p>
                        </div>
                        
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>


<%include ../partials/footer%>
